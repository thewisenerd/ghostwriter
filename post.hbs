{{!< default}}
<div id="content">
<div class="container">
    {{#post}}
        <article class="{{post_class}}">
            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>

                <p class="post-date"><time datetime="{{published_at}}">Published {{date format="MMMM Do YYYY"}}</time></p>
            </header>

            <div class="post-content">
                {{{content}}}

                {{#if tags}}
                    <p class="post-tags"><span>Tagged:</span> {{tags}}</p>
                {{/if}}
            </div>
        </article>
        {{#if author}}
        <section class="author">
            <img src="{{author.image}}" class="userimage" alt="{{author.name}}" />
            <p class="author-content">Author: {{author.name}}<br>
            <a href="mailto:{{author.email}}">Email me</a><br>
            {{author.bio}}</p>
        </section>
        {{/if}}

    {{/post}}
</div>
{{> footer}}
</div>
